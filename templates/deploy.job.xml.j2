<?xml version='1.1' encoding='UTF-8'?>
<project>
  <description></description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@4.2.2">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>https://{{ github_repo_path }}</url>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>*/master</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions>
      <hudson.plugins.git.extensions.impl.RelativeTargetDirectory>
        <relativeTargetDir>git</relativeTargetDir>
      </hudson.plugins.git.extensions.impl.RelativeTargetDirectory>
    </extensions>
  </scm>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <authToken>{{ token_remote_deploy }}</authToken>
  <triggers>
    <hudson.triggers.SCMTrigger>
      <spec>{{ scm_cron_deploy }}</spec>
      <ignorePostCommitHooks>false</ignorePostCommitHooks>
    </hudson.triggers.SCMTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>
 if [ -f ./docker-compose.yml ] ; then
 docker-compose stop &amp;&amp; \
 docker-compose down &amp;&amp; \
 rm ./docker-compose.yml &amp;&amp; \
 rm -r ./www &amp;&amp; \
 rm -r ./php-fpm &amp;&amp; \
 rm -r ./nginx-conf
fi

  cp -r ./git/www ./www &amp;&amp; \
  cp -r ./git/php-fpm ./php-fpm &amp;&amp; \
  cp -r ./git/nginx-conf ./nginx-conf &amp;&amp; \
  cp  ./git/docker-compose.yml  ./docker-compose.yml &amp;&amp; \
  cp ./wp-config.php  ./www/wp-config.php &amp;&amp; \
  rm -r ./git &amp;&amp; \
  docker-compose up -d --build

</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers/>
</project>
