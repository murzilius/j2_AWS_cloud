#!/bin/bash
sudo add-apt-repository -y ppa:ansible/ansible
sudo apt update
sudo apt install -y ansible
sudo apt install -y mc
export USERNAME_J=admin
export USERPASS_J=admin
export MYSQL_ROOT_PASSWORD=admin
export MYSQL_PASSWORD=admin
export MYSQL_USER=wordpress
echo "" > ~/.ssh/id_rsa
echo $MYSQL_USER > ~/env_test.txt
md ~/project2/
wget -O ~/project2/playbook.yml https://raw.githubusercontent.com/murzilius/j2_AWS_cloud/master/playbook.yml
cd ~/project2/
git init
git remote add j2_AWS_cloud https://github.com/murzilius/j2_AWS_cloud
git pull https://github.com/murzilius/j2_AWS_cloud
echo "[srv:vars]" > ~/project2/hosts
echo "ansible_ssh_user=ubuntu" > ~/project2/hosts
echo "ansible_ssh_private_key_file=/root/.ssh/id_rsa" > ~/project2/hosts
echo "ansible_ssh_common_args='-o StrictHostKeyChecking=no'" > ~/project2/hosts
echo "[srv]" > ~/project2/hosts
echo "${public_ip_for_Web}" > ~/project2/hosts

